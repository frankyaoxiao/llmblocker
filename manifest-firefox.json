{
  "manifest_version": 3,
  "name": "Focus Guard",
  "version": "1.0.0",
  "description": "Block web pages that don't align with your current goals using AI analysis",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "scripts": ["src/background/service-worker.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file://*/*"],
      "js": [
        "src/shared/constants.js",
        "src/shared/utils.js", 
        "src/shared/storage.js",
        "src/content/content.js"
      ],
      "css": ["src/content/blocker.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Focus Guard"
  },
  
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  
  "web_accessible_resources": [
    {
      "resources": ["src/content/blocker.css"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  
  "browser_specific_settings": {
    "gecko": {
      "id": "focus-guard@anthropic.com",
      "strict_min_version": "109.0"
    }
  }
}